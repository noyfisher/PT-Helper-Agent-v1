{
  "type": "ios_feature",
  "mode": "pr",
  "title": "Create Workout Progress Tracker",
  "description": "Build a comprehensive workout progress tracking system for PT patients to log exercises, track pain levels, and monitor recovery progress over time",
  "requirements": [
    "Workout session creation and management",
    "Exercise progress logging with pain scale integration",
    "Visual progress charts and trends",
    "Session history with detailed notes",
    "Therapist communication features"
  ],
  "deliverables": [
    {
      "path": "ios/PT-Helper/PT-Helper/Views/WorkoutSessionView.swift",
      "type": "new",
      "description": "Main workout session interface"
    },
    {
      "path": "ios/PT-Helper/PT-Helper/Views/ProgressChartView.swift",
      "type": "new",
      "description": "Visual progress charts"
    },
    {
      "path": "ios/PT-Helper/PT-Helper/Models/WorkoutSession.swift",
      "type": "new",
      "description": "Core workout session data model"
    },
    {
      "path": "ios/PT-Helper/PT-Helper/ViewModels/WorkoutViewModel.swift",
      "type": "new",
      "description": "ViewModel managing workout sessions"
    }
  ],
  "properties": {
    "workout_session": {
      "id": "UUID",
      "date": "Date",
      "duration": "TimeInterval",
      "painLevel": "Int",
      "isCompleted": "Bool"
    }
  },
  "context": {
    "app_domain": "physical_therapy",
    "target_ios_version": "15.0+",
    "ui_framework": "SwiftUI",
    "architecture_pattern": "MVVM"
  }
}
