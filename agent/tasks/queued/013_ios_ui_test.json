{
    "type": "ios_feature",
    "mode": "pr",
    "title": "Add Settings Screen with Profile Management",
    "description": "Create a complete settings screen with user profile management functionality using SwiftUI and MVVM architecture",
    "requirements": [
      "SwiftUI-based settings screen with navigation",
      "User profile section with editable fields",
      "Toggle switches for app preferences",
      "Sign out functionality",
      "Dark mode toggle",
      "Proper MVVM architecture with ViewModel"
    ],
    "deliverables": [
      {
        "path": "ios/PT-Helper/Views/SettingsView.swift",
        "type": "new",
        "description": "Main settings screen SwiftUI view"
      },
      {
        "path": "ios/PT-Helper/ViewModels/SettingsViewModel.swift", 
        "type": "new",
        "description": "ViewModel for settings screen with ObservableObject"
      },
      {
        "path": "ios/PT-Helper/Models/UserProfile.swift",
        "type": "new", 
        "description": "User profile data model"
      },
      {
        "path": "ios/PT-Helper/Models/AppSettings.swift",
        "type": "new",
        "description": "App settings configuration model"
      },
      {
        "path": "ios/PT-Helper/Views/Components/ProfileRow.swift",
        "type": "new",
        "description": "Reusable profile row component"
      }
    ],
    "properties": {
      "user_profile_fields": {
        "name": "String",
        "email": "String", 
        "profileImage": "String?",
        "joinDate": "Date"
      },
      "app_settings": {
        "isDarkMode": "Bool",
        "notificationsEnabled": "Bool",
        "autoSyncEnabled": "Bool",
        "preferredLanguage": "String"
      }
    },
    "constraints": [
      "Follow iOS Human Interface Guidelines",
      "Use SF Symbols for icons",
      "Support both light and dark mode",
      "Include accessibility identifiers",
      "Add proper navigation structure"
    ],
    "context": {
      "target_ios_version": "15.0+",
      "architecture_pattern": "MVVM",
      "ui_framework": "SwiftUI"
    }
  }