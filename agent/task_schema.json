{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Task",
  "type": "object",
  "required": ["type", "title", "description", "deliverables"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Task type",
      "enum": ["ios_feature", "ios_bugfix", "ios_refactor"]
    },
    "mode": {
      "type": "string",
      "description": "Delivery mode: 'pr' opens a pull request, 'direct' commits to main",
      "enum": ["pr", "direct"],
      "default": "pr"
    },
    "title": {
      "type": "string",
      "description": "Short human-readable title"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what to build"
    },
    "requirements": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of functional requirements"
    },
    "deliverables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative file path from repo root, must be under ios/PT-Helper/PT-Helper/"
          },
          "type": {
            "type": "string",
            "enum": ["new", "update", "delete"],
            "description": "'new' to create, 'update' to modify existing, 'delete' to remove"
          },
          "description": {
            "type": "string",
            "description": "What this file should contain or do"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "description": "Property definitions for data models (name to Swift type mappings)"
    },
    "context": {
      "type": "object",
      "description": "Additional context like target iOS version, architecture, domain",
      "properties": {
        "app_domain": { "type": "string" },
        "target_ios_version": { "type": "string" },
        "ui_framework": { "type": "string" },
        "architecture_pattern": { "type": "string" }
      }
    },
    "context_files": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths to existing files the LLM should read for additional context"
    },
    "model": {
      "type": "string",
      "description": "Optional LLM model override, e.g. 'gpt-4o', 'gpt-4o-mini'"
    }
  }
}
